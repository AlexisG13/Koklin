<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed by:"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bonobo Studios™"
            android:textSize="20dp"
            android:textStyle="bold"/>
    <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mail:"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bonobostudiossv@gmail.com"
            android:textColor="#3F51B5"/>

    <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#E4E4E4"></LinearLayout>
    <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_gravity="center"
                      android:layout_marginLeft="25dp"
                      android:layout_marginRight="10dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy and Terms of Service"
                    android:textStyle="bold"
                    android:layout_gravity="right"/>
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://alexisg13.github.io/PrivacyPolicy"
                android:textColor="#3F51B5"
                android:padding="10dp"
                android:layout_gravity="right"/>
    </LinearLayout>
    <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/Koklin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Koklin ©2019"
            android:gravity="center"/>


</LinearLayout>