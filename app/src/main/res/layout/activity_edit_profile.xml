<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.EditProfileActivity">

    <ImageView
            android:id="@+id/ProfilePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <TextView
            android:id="@+id/EditProfiletextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar foto del perfil"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/ProfilePhoto"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
            android:id="@+id/NombreVista"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/EditProfiletextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Nombre"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
    </LinearLayout>
    <EditText
            android:id="@+id/EditNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Nombre Completo"
            app:layout_constraintTop_toBottomOf="@id/NombreVista"/>


    <LinearLayout
            android:id="@+id/Username"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/EditNameET"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Nombre de usuario"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
    </LinearLayout>
    <EditText
            android:id="@+id/EditUserET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@id/Username"
            android:hint="Username"/>

    <LinearLayout
            android:id="@+id/Correo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/EditUserET"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Dirección de correo electrónico"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
    </LinearLayout>
    <EditText
            android:id="@+id/EditCorreoET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="user@example.com"
            app:layout_constraintTop_toBottomOf="@id/Correo"/>

    <LinearLayout
            android:id="@+id/Comprension"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/EditCorreoET"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Comprensión auditiva"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
    </LinearLayout>

    <CheckBox
            android:id="@+id/CheckBaja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/Comprension"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/BajaTV"
            app:layout_constraintBottom_toTopOf="@id/CheckMedia"/>
    <TextView
            android:id="@+id/BajaTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baja"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/Comprension"
            app:layout_constraintLeft_toRightOf="@id/CheckBaja"
            app:layout_constraintRight_toRightOf="parent"/>

    <CheckBox
            android:id="@+id/CheckMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/CheckBaja"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/MediaTV"
            app:layout_constraintBottom_toTopOf="@id/CheckAlta"/>
    <TextView
            android:id="@+id/MediaTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/BajaTV"
            app:layout_constraintLeft_toRightOf="@id/CheckMedia"
            app:layout_constraintRight_toRightOf="parent"/>

    <CheckBox
            android:id="@+id/CheckAlta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/CheckMedia"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/AltaTV"/>
    <TextView
            android:id="@+id/AltaTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alta"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/MediaTV"
            app:layout_constraintLeft_toRightOf="@id/CheckAlta"
            app:layout_constraintRight_toRightOf="parent"/>


    <Button
            android:id="@+id/BtnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:background="#fff"
            app:layout_constraintTop_toBottomOf="@id/CheckAlta"
            app:layout_constraintRight_toLeftOf="@id/BtnConfirmEditProfile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:id="@+id/BtnConfirmEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar Cambios"
            app:layout_constraintTop_toBottomOf="@id/CheckAlta"
            app:layout_constraintLeft_toRightOf="@id/BtnCancel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>