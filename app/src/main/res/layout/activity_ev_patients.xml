<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#f9f7e8"
        tools:context=".EvPatientsActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#60BFAD"
            android:gravity="left"
            android:padding="3dp"
            android:elevation="5dp">
        <ImageView
                android:id="@+id/ResultadosViewClick"
                android:padding="5dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/resultados_imagen"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/NuevoTestPacienteCreado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_color_bonito"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_plus_icon"
                android:layout_weight="2"/>
        <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#f0c3a2"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"></LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_nombrePaciente"
                android:text="Hacer una nueva evaluaciÃ³n"
                android:textColor="#bcda84"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="2"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvResultados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:padding="5dp"
            android:background="#FFF"
            android:layout_weight="3"></androidx.recyclerview.widget.RecyclerView>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/wea_cosmica_verde"/>
</LinearLayout>