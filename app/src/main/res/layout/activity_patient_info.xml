<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PatientInfoActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRO DE PACIENTE"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/ObtenerInformación"
            app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ObtenerInformación"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <EditText
                android:id="@+id/etNombrePaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi"
                android:hint="Ingrese el nombre del paciente"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
         <EditText
                 android:id="@+id/etEdadPaciente"
                 android:hint="Edad del paciente"
                 android:inputType="number"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:imeOptions="flagNoExtractUi"
                 android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/etNombrePaciente"
                app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
                android:id="@+id/LayoutGenero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Género:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toRightOf="@id/etEdadPaciente"
                app:layout_constraintRight_toLeftOf="@id/rgLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etNombrePaciente"/>
        <RadioGroup
                android:id="@+id/rgLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toRightOf="@id/LayoutGenero"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etNombrePaciente">
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:layout_marginRight="3dp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:layout_marginLeft="3dp"/>
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:id="@+id/BtnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="CANCELAR"
            android:textSize="20sp"
            android:padding="10dp"
            app:layout_constraintRight_toLeftOf="@id/BtnAceptar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ObtenerInformación"/>
    <Button
            android:id="@+id/BtnAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACEPTAR"
            android:background="#FFC107"
            android:textSize="20sp"
            android:padding="10dp"
            app:layout_constraintLeft_toRightOf="@id/BtnCancelar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ObtenerInformación"/>

</androidx.constraintlayout.widget.ConstraintLayout>