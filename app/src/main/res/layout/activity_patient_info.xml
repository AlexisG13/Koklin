<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f7e8"
        android:orientation="vertical"
        tools:context=".PatientInfoActivity">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/wea_cosmica"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTRO DE PACIENTE"
                android:gravity="center"
                android:textSize="40sp"
                android:background="@drawable/pregunta_view"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp"
                android:elevation="5dp"/>
        <LinearLayout
                android:id="@+id/ObtenerInformación"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp">
            <EditText
                    android:id="@+id/etNombrePaciente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPersonName"
                    android:hint="Ingrese el nombre del paciente"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                <EditText
                        android:id="@+id/etEdadPaciente"
                        android:hint="Edad del paciente"
                        android:inputType="number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/LayoutGenero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Género:"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_weight="1"/>
                <RadioGroup
                        android:id="@+id/rgLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1">
                    <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M"
                            android:layout_marginRight="3dp"/>
                    <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F"
                            android:layout_marginLeft="3dp"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
            <TextView
                    android:id="@+id/BtnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="CANCELAR"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/BtnAceptar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACEPTAR"
                    android:gravity="center"
                    android:background="@drawable/paciente_layout"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/wea_cosmica_verde"/>
</LinearLayout>