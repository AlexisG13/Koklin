<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity">


    <ImageView
            android:id="@+id/ProfilePhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="10dp"
            android:src="@drawable/ic_person_black_24dp"
            android:background="@drawable/round_image_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/NombreEspecialista"/>
    <TextView
            android:id="@+id/NombreEspecialista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Especialista"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/ProfilePhoto"
            app:layout_constraintBottom_toTopOf="@id/CargoEspecialista"/>
    <TextView
            android:id="@+id/CargoEspecialista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargo del Especialista"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/NombreEspecialista"
            app:layout_constraintBottom_toTopOf="@id/MensajeFirma"/>
    <ImageView
            android:id="@+id/editarO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_black_24dp"
            android:padding="5dp"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toBottomOf="@id/MensajeFirma"
            app:layout_constraintRight_toLeftOf="@id/EditarFirma"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_sign_out"/>
    <TextView
            android:id="@+id/EditarFirma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Firma"
            android:padding="5dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/MensajeFirma"
            app:layout_constraintLeft_toRightOf="@id/editarO"
            app:layout_constraintBottom_toTopOf="@id/btn_sign_out"     />
    <TextView
            android:id="@+id/MensajeFirma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:background="@drawable/border_layout"
            android:text="Obdulio Guardado | Lic. en Ciencias de la ComputaciÃ³n"
            app:layout_constraintTop_toBottomOf="@id/CargoEspecialista"
            app:layout_constraintBottom_toTopOf="@id/btn_sign_out" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <Button
            android:id="@+id/btn_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG OUT"
            android:textStyle="bold"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@id/CargoEspecialista"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>