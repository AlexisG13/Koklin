<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/PacientesConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ResultadosConstraint"
            android:layout_weight="2">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LayoutTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#ECEBEB"
                app:layout_constraintBottom_toTopOf="@id/LinearLayoutDeSeparacion"
                app:layout_constraintTop_toTopOf="parent">
            <TextView
                    android:id="@+id/LayoutPacientes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pacientes"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/ET_search"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText
                    android:id="@+id/ET_search"
                    android:layout_width="150dp"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="  "
                    app:layout_constraintLeft_toRightOf="@id/LayoutPacientes"
                    app:layout_constraintRight_toLeftOf="@id/IB_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageButton
                    android:id="@+id/IB_button"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@drawable/ic_search_black_24dp"
                    app:layout_constraintLeft_toRightOf="@id/ET_search"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                    android:id="@+id/NumeroDePacientes"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/koklin_solo_logo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/IB_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
                android:id="@+id/LinearLayoutDeSeparacion"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#B9B9B9"
                app:layout_constraintTop_toBottomOf="@id/LayoutTop"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="vertical"></LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPacientes"
                android:layout_width="350dp"
                android:layout_height="170dp"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:background="@drawable/border_layout"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/LinearLayoutDeSeparacion"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"></androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ResultadosConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/PacientesConstraint"
            app:layout_constraintBottom_toTopOf="@id/StartANewTestIcon"
            android:layout_weight="2">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LayoutTop1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#ECEBEB"
                app:layout_constraintBottom_toTopOf="@id/LinearLayoutDeSeparacion1"
                app:layout_constraintTop_toTopOf="parent">
            <TextView
                    android:id="@+id/LayoutPacientes1"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:text="Resultados"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
                android:id="@+id/LinearLayoutDeSeparacion1"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#B9B9B9"
                app:layout_constraintTop_toBottomOf="@id/LayoutTop1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="vertical"></LinearLayout>

        <RelativeLayout
                android:id="@+id/NuevoTestPacienteCreado"
                android:layout_width="350dp" android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@id/LinearLayoutDeSeparacion1"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="25dp"
                android:visibility="invisible"
                android:background="@drawable/border_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/rvResultados">
            <TextView
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/tv_nombrePaciente"
                    android:text="Hacer una nueva evaluaciÃ³n"
                    android:background="#65E4E0E0"
                    android:lines="1"
                    android:padding="8dp"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:gravity="center"/>
            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:id="@+id/tv_numeroPaciente"
                    android:text="+"
                    android:background="#659C9A9A"
                    android:lines="1"
                    android:padding="8dp"
                    android:textColor="#009104"
                    android:textSize="15sp"
                    android:gravity="center"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvResultados"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:elevation="5dp"
                android:background="@drawable/border_layout"
                app:layout_constraintTop_toBottomOf="@id/NuevoTestPacienteCreado"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"></androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:id="@+id/NavigationBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B9B9B9"
            android:orientation="horizontal">
        <LinearLayout
                android:id="@+id/actionProfile"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <ImageView
                android:id="@+id/StartANewTestIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_plus_icon"/>
        <LinearLayout
                android:id="@+id/actionSettings"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/settingsIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_info_black_24dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>