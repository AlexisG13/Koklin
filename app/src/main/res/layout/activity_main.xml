<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/LayoutTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#ECEBEB"
            app:layout_constraintBottom_toTopOf="@id/LinearLayoutDeSeparacion"
            app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:id="@+id/LayoutPacientes"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Pacientes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/NumeroDePacientes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
                android:id="@+id/NumeroDePacientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="255"
                android:padding="8dp"
                android:textColor="#FFF"
                android:background="@drawable/paciente_layout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/LayoutPacientes"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:id="@+id/LinearLayoutDeSeparacion"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#B9B9B9"
            app:layout_constraintTop_toBottomOf="@id/LayoutTop"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical"></LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPacientes"
            android:layout_width="350dp"
            android:layout_height="170dp"
            android:layout_margin="20dp"
            android:padding="5dp"
            android:background="@drawable/border_layout"
            android:elevation="5dp"
            app:layout_constraintTop_toBottomOf="@id/LinearLayoutDeSeparacion"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/LayoutBottom"></androidx.recyclerview.widget.RecyclerView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/LayoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#ECEBEB"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/rvPacientes">
        <TextView
                android:id="@+id/LayoutResultados"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Resultados"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:id="@+id/LinearLayoutDeSeparacion2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#B9B9B9"
            app:layout_constraintTop_toBottomOf="@id/LayoutBottom"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical"></LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Resultados"
            android:layout_width="350dp"
            android:layout_height="170dp"
            android:layout_margin="20dp"
            android:padding="5dp"
            android:background="@drawable/border_layout"
            android:elevation="5dp"
            app:layout_constraintTop_toBottomOf="@id/LinearLayoutDeSeparacion2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <TextView
                android:id="@+id/Param1"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Parámetro 1:"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/Param2"/>
        <TextView
                android:id="@+id/Param2"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Parámetro 2:"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Param1"
                app:layout_constraintBottom_toTopOf="@id/Param3"/>
        <TextView
                android:id="@+id/Param3"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Parámetro 3:"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Param2"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/ResultsP1"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="73%"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ResultsP2"
                app:layout_constraintLeft_toRightOf="@id/Param1"
                app:layout_constraintRight_toRightOf="parent"/>
        <TextView
                android:id="@+id/ResultsP2"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="20%"
                app:layout_constraintTop_toBottomOf="@id/ResultsP1"
                app:layout_constraintBottom_toTopOf="@id/ResultsP3"
                app:layout_constraintLeft_toRightOf="@id/Param2"
                app:layout_constraintRight_toRightOf="parent"/>
        <TextView
                android:id="@+id/ResultsP3"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="7%"
                app:layout_constraintTop_toBottomOf="@id/ResultsP2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/Param3"
                app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/NavigationBar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#B9B9B9"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:id="@+id/actionProfile"
                android:layout_width="165dp"
                android:layout_height="55dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"></LinearLayout>
        <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="60dp"
                android:src="@drawable/ic_person_black_24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/settingsIcon"/>
        <LinearLayout
                android:id="@+id/actionSettings"
                android:layout_width="165dp"
                android:layout_height="55dp"
                android:orientation="vertical"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"></LinearLayout>
        <ImageView
                android:id="@+id/settingsIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/ic_settings_black_24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/profileIcon"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
            android:id="@+id/StartANewTestIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_plus_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>