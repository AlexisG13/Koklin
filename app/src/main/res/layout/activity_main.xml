<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/PacientesConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ResultadosConstraint">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LayoutTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#ECEBEB"
                app:layout_constraintBottom_toTopOf="@id/LinearLayoutDeSeparacion"
                app:layout_constraintTop_toTopOf="parent">
            <TextView
                    android:id="@+id/LayoutPacientes"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:text="Pacientes"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/NumeroDePacientes"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                    android:id="@+id/NumeroDePacientes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="255"
                    android:padding="8dp"
                    android:textColor="#FFF"
                    android:background="@drawable/paciente_layout"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/LayoutPacientes"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
                android:id="@+id/LinearLayoutDeSeparacion"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#B9B9B9"
                app:layout_constraintTop_toBottomOf="@id/LayoutTop"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="vertical"></LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPacientes"
                android:layout_width="350dp"
                android:layout_height="170dp"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:background="@drawable/border_layout"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/LinearLayoutDeSeparacion"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"></androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ResultadosConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/PacientesConstraint"
            app:layout_constraintBottom_toTopOf="@id/StartANewTestIcon">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LayoutTop1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#ECEBEB"
                app:layout_constraintBottom_toTopOf="@id/LinearLayoutDeSeparacion1"
                app:layout_constraintTop_toTopOf="parent">
            <TextView
                    android:id="@+id/LayoutPacientes1"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:text="Resultados"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
                android:id="@+id/LinearLayoutDeSeparacion1"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#B9B9B9"
                app:layout_constraintTop_toBottomOf="@id/LayoutTop1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="vertical"></LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvResultados"
                android:layout_width="350dp"
                android:layout_height="170dp"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:background="@drawable/border_layout"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/LinearLayoutDeSeparacion1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"></androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/NavigationBar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#B9B9B9"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:id="@+id/actionProfile"
                android:layout_width="165dp"
                android:layout_height="55dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"></LinearLayout>
        <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="60dp"
                android:src="@drawable/ic_person_black_24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/settingsIcon"/>
        <LinearLayout
                android:id="@+id/actionSettings"
                android:layout_width="165dp"
                android:layout_height="55dp"
                android:orientation="vertical"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"></LinearLayout>
        <ImageView
                android:id="@+id/settingsIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/ic_settings_black_24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/profileIcon"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
            android:id="@+id/StartANewTestIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_plus_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>