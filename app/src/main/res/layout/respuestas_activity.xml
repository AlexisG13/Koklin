<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
            android:id="@+id/tv_RegistroTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="RESULTADOS"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/LayoutResultados"/>
    <TextView
            android:id="@+id/NombreExaminado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del examinado"
            android:textSize="30sp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/border_layout"
            app:layout_constraintTop_toBottomOf="@id/tv_RegistroTemp"
            app:layout_constraintBottom_toTopOf="@id/LayoutResultados"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/LayoutResultados"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:background="@drawable/border_layout"
            android:elevation="3dp"
            app:layout_constraintTop_toBottomOf="@id/tv_RegistroTemp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/BtnAceptarResultados">
        <TextView
                android:id="@+id/tv_Buenas"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Buenas:"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_Malas"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/NumeroDeBuenas"/>
        <TextView
                android:id="@+id/tv_Malas"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Malas:"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tv_Buenas"
                app:layout_constraintBottom_toTopOf="@id/ResultadoFinal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/NumeroDeMalas"/>
        <TextView
                android:id="@+id/NumeroDeBuenas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                app:layout_constraintLeft_toRightOf="@id/tv_Buenas"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/NumeroDeMalas"/>
        <TextView
                android:id="@+id/NumeroDeMalas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                app:layout_constraintLeft_toRightOf="@id/tv_Malas"
                app:layout_constraintTop_toBottomOf="@id/NumeroDeBuenas"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ResultadoFinal"/>
        <TextView
                android:id="@+id/ResultadoFinal"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="AudiciÃ³n Normal"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/paciente_layout"
                app:layout_constraintTop_toBottomOf="@id/tv_Malas"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
            android:id="@+id/BtnAceptarResultados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF9800"
            android:text="ACEPTAR"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@id/LayoutResultados"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>